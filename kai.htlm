<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>[Project Name] Dashboard</title>
    
    <!-- Google Font: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- D3.js v7 CDN -->
    <script src="https://d3js.org/d3.v7.min.js"></script>

    <!-- Custom Styles & Print Styles -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Reusable Card Hover Effect */
        .card-hover {
            transition: all 0.3s ease-in-out;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* Mimics shadow-xl */
        }

        /* Animation Classes */
        .fade-in {
            opacity: 0;
            transform: translateY(10px);
            transition: opacity 0.5s ease-out, transform 0.5s ease-out;
        }
        .fade-in.is-visible {
            opacity: 1;
            transform: translateY(0);
        }
        .fade-in-delay-1 { transition-delay: 100ms; }
        .fade-in-delay-2 { transition-delay: 200ms; }
        .fade-in-delay-3 { transition-delay: 300ms; }
        .fade-in-delay-4 { transition-delay: 400ms; }


        /* Section Visibility */
        main section {
            display: none;
        }
        main section.active {
            display: block;
        }

        /* Active Nav Button Style */
        .nav-btn.active {
            background-color: #2563eb; /* bg-blue-600 */
            color: white;
        }
        
        /* D3 Chart Tooltip */
        #chart-tooltip {
            position: absolute;
            opacity: 0;
            transition: opacity 0.2s ease;
            pointer-events: none;
            z-index: 50;
        }

        /* Print-Specific Styles */
        @media print {
            body, html, main, #app-container {
                overflow: visible !important;
                background-color: #fff !important;
                position: static !important;
            }

            body {
                font-family: 'Times New Roman', serif;
                font-size: 12pt;
                color: #000;
            }

            /* Hide all interactive elements */
            nav, #report-controls, #modal-backdrop, #chart-tooltip, .kpi-card, #bar-chart-container, #growth-chart-container {
                display: none !important;
            }

            main {
                margin-left: 0 !important;
                padding: 1in !important; /* Standard 1-inch margins */
                width: 100% !important;
                min-height: auto !important;
            }
            
            header {
                flex-direction: column;
                align-items: flex-start !important;
                margin-bottom: 0.5in;
            }
            
            h1, h2, h3, h4, p {
                color: #000 !important;
            }

            /* Show all sections and force page breaks */
            main section {
                display: block !important;
                opacity: 1 !important;
                transform: none !important;
                page-break-before: always; /* Each major section on a new page */
                margin-top: 0.5in;
            }

            main section:first-of-type {
                page-break-before: auto; /* No page break before the first section */
                margin-top: 0;
            }
            
            .card {
                border: 1px solid #ccc !important;
                box-shadow: none !important;
                border-radius: 0 !important;
                padding: 0.25in;
            }

            table, th, td {
                border: 1px solid #000 !important;
                border-collapse: collapse;
            }
            
            th, td {
                padding: 4pt;
            }

            a {
                text-decoration: none;
                color: #000;
            }
            
            /* Page setup */
            @page {
                margin: 1in;
            }
        }
    </style>
</head>
<body class="bg-slate-50 text-slate-800 antialiased">

    <div id="app-container" class="flex flex-col md:flex-row min-h-screen">
        
        <!-- Left Navigation Sidebar -->
        <nav id="main-nav" class="w-full md:fixed md:top-0 md:left-0 md:h-full md:w-64 bg-slate-900 text-slate-200 flex-shrink-0 z-20">
            <!-- Spacer to align with content card -->
            <div class="hidden md:block h-24"></div>
            
            <div class="p-4 space-y-2">
                <button data-target="overview" class="nav-btn active w-full flex items-center space-x-3 p-3 rounded-lg font-medium transition-colors duration-200 hover:bg-slate-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    <span>Overview</span>
                </button>

                <button data-target="team" class="nav-btn w-full flex items-center space-x-3 p-3 rounded-lg font-medium transition-colors duration-200 hover:bg-slate-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                    <span>Team</span>
                </button>

                <button data-target="goals" class="nav-btn w-full flex items-center space-x-3 p-3 rounded-lg font-medium transition-colors duration-200 hover:bg-slate-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                    <span>Goals</span>
                </button>

                <button data-target="dashboard" class="nav-btn w-full flex items-center space-x-3 p-3 rounded-lg font-medium transition-colors duration-200 hover:bg-slate-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="20" x2="12" y2="10"></line><line x1="18" y1="20" x2="18" y2="4"></line><line x1="6" y1="20" x2="6" y2="16"></line></svg>
                    <span>Key Metrics</span>
                </button>

                <button data-target="impact" class="nav-btn w-full flex items-center space-x-3 p-3 rounded-lg font-medium transition-colors duration-200 hover:bg-slate-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline><polyline points="16 7 22 7 22 13"></polyline></svg>
                    <span>Impact Dashboard</span>
                </button>

                <button data-target="testimonials" class="nav-btn w-full flex items-center space-x-3 p-3 rounded-lg font-medium transition-colors duration-200 hover:bg-slate-700">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                    <span>Community Testimonials</span>
                </button>
            </div>
        </nav>

        <!-- Main Content Area -->
        <main class="flex-1 md:ml-64 p-6 md:p-10 bg-slate-50 min-h-screen">
            
            <!-- Content Header -->
            <header class="mb-8 pb-4 border-b border-slate-200">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                    <div>
                        <h1 id="main-title" class="text-3xl font-bold text-slate-900">[Project Name]</h1>
                        <h2 id="report-subtitle" class="text-lg text-slate-600 font-medium mt-1">Current Report</h2>
                    </div>
                    <div id="report-controls" class="flex items-center space-x-3 mt-4 md:mt-0">
                        <select id="report-select" class="bg-white border border-slate-300 rounded-md shadow-sm py-2 px-3 text-sm font-medium text-slate-700 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="Current Report">Current Report</option>
                            <option value="Semi-Annual Report">Semi-Annual Report</option>
                            <option value="Annual Report">Annual Report</option>
                            <option value="Final Report">Final Report</option>
                        </select>
                        <button id="print-pdf-btn" class="flex items-center space-x-2 bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 6 2 18 2 18 9"></polyline><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path><rect x="6" y="14" width="12" height="8"></rect></svg>
                            <span>Print PDF</span>
                        </button>
                    </div>
                </div>
            </header>

            <!-- Loading/Error State -->
            <div id="message-container" class="text-center p-10"></div>

            <!-- ===== Overview Section ===== -->
            <section id="overview" class="active space-y-6">
                <div class="card card-hover fade-in bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
                    <h3 class="text-xl font-semibold mb-4 text-slate-800">Project Details</h3>
                    <div class="overflow-x-auto">
                        <table id="project-details-table" class="min-w-full divide-y divide-slate-200">
                            <tbody class="bg-white divide-y divide-slate-200">
                                <!-- JS will populate this -->
                                <tr><td class="p-3 text-sm text-slate-500">Loading details...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card card-hover fade-in fade-in-delay-1 bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
                    <h3 class="text-xl font-semibold mb-4 text-slate-800">Executive Summary</h3>
                    <div id="exec-summary-content" class="prose prose-slate max-w-none text-slate-600 space-y-4">
                        <p>Loading summary...</p>
                    </div>
                </div>
            </section>

            <!-- ===== Community Testimonials Section ===== -->
            <section id="testimonials" class="space-y-6">
                <div class="card card-hover fade-in bg-white p-6 rounded-xl border border-slate-200 shadow-sm">
                    <h3 class="text-xl font-semibold mb-4 text-slate-800">Community Testimonials</h3>
                    <div id="testimonials-content" class="space-y-6">
                        <p class="text-slate-500">Loading testimonials...</p>
                    </div>
                </div>
            </section>

        </main>
    </div>

    <!-- Modal Backdrop -->
    <div id="modal-backdrop" class="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4 z-40 hidden opacity-0 transition-opacity duration-300">
        <!-- Modal Content -->
        <div id="modal-content" class="bg-white rounded-xl shadow-2xl w-full max-w-2xl max-h-[90vh] flex flex-col transform scale-95 transition-all duration-300">
            <header class="flex items-center justify-between p-4 border-b border-slate-200">
                <h2 id="modal-title" class="text-lg font-semibold text-slate-800">Metric Details</h2>
                <button id="modal-close-btn" class="text-slate-400 hover:text-slate-600">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </header>
            <div class="p-6 overflow-y-auto">
                <div id="modal-chart-container" class="w-full min-h-[250px]">
                    <!-- D3 chart will be drawn here -->
                </div>
            </div>
        </div>
    </div>

    <!-- D3 Chart Tooltip -->
    <div id="chart-tooltip" class="hidden p-2 text-sm bg-slate-900 text-white rounded-md shadow-lg opacity-0 transition-opacity z-50"></div>


    <!-- Main Application JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", initializeApp);

        // --- Global State ---
        const API_URL = "./project_data.json";
        let projectData = {};
        let activeChartDrawers = {}; // Store functions to redraw charts on tab switch
        let intersectionObserver;
        const tooltip = d3.select("#chart-tooltip");
        
        /**
         * Initializes the application: fetches data, sets up listeners and observers.
         */
        function initializeApp() {
            const messageContainer = document.getElementById("message-container");
            messageContainer.textContent = "Loading dashboard data...";

            // Fetch data with cache-busting
            fetch(`${API_URL}?_=${new Date().getTime()}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    projectData = data;
                    messageContainer.textContent = ""; // Clear loading message
                    populateDashboard(data);
                    setupEventListeners();
                    setupObserver();
                    // Observe elements in the initially active section
                    observeVisibleFadeIns();
                })
                .catch(error => {
                    console.error("Failed to load project data:", error);
                    messageContainer.innerHTML = `
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg" role="alert">
                            <strong class="font-bold">Error:</strong>
                            <span class="block sm:inline">Failed to load project data. Please check the console and ensure 'project_data.json' is available.</span>
                        </div>
                    `;
                });
        }

        /**
         * Sets up all global event listeners for navigation, controls, and modals.
         */
        function setupEventListeners() {
            // Tab Navigation
            document.getElementById("main-nav").addEventListener("click", (e) => {
                const navButton = e.target.closest(".nav-btn");
                if (!navButton || navButton.classList.contains("active")) return;

                const targetId = navButton.dataset.target;
                
                // Update nav button styles
                document.querySelectorAll("#main-nav .nav-btn").forEach(btn => btn.classList.remove("active"));
                navButton.classList.add("active");

                // Toggle sections
                document.querySelectorAll("main section").forEach(section => {
                    section.classList.toggle("active", section.id === targetId);
                });
                
                // Trigger animations for the new section
                observeVisibleFadeIns();
                
                // Redraw chart if one is associated with this tab
                if (activeChartDrawers[targetId]) {
                    activeChartDrawers[targetId]();
                }
            });

            // Report Controls
            document.getElementById("report-select").addEventListener("change", (e) => {
                document.getElementById("report-subtitle").textContent = e.target.value;
            });

            document.getElementById("print-pdf-btn").addEventListener("click", () => {
                window.print();
            });

            // Modal Listeners
            document.getElementById("kpi-grid").addEventListener("click", (e) => {
                const kpiCard = e.target.closest(".kpi-card");
                if (!kpiCard) return;

                const title = kpiCard.querySelector(".kpi-title").textContent;
                let modalData;
                try {
                    modalData = JSON.parse(kpiCard.dataset.values);
                } catch (err) {
                    console.error("Could not parse modal data:", err);
                    modalData = [];
                }
                
                openModal(title, modalData);
            });
            
            document.getElementById("modal-close-btn").addEventListener("click", closeModal);
            document.getElementById("modal-backdrop").addEventListener("click", (e) => {
                if (e.target.id === "modal-backdrop") {
                    closeModal();
                }
            });
        }
        
        /**
         * Opens and populates the modal, then draws the chart.
         */
        function openModal(title, data) {
            const modalBackdrop = document.getElementById("modal-backdrop");
            const modalContent = document.getElementById("modal-content");
            
            document.getElementById("modal-title").textContent = title;
            
            // Show modal with animation
            modalBackdrop.classList.remove("hidden");
            setTimeout(() => {
                modalBackdrop.classList.add("opacity-100");
                modalContent.classList.add("scale-100");
            }, 10); // Short delay to allow CSS to register 'hidden' removal

            // Draw chart
            if (data && data.length > 0) {
                createModalBarChart(data, "#modal-chart-container", `Detailed View: ${title}`);
            } else {
                 document.getElementById("modal-chart-container").innerHTML = `<p class="text-slate-500 text-center">No detailed data available for this metric.</p>`;
            }
        }

        /**
         * Closes the modal with animation.
         */
        function closeModal() {
            const modalBackdrop = document.getElementById("modal-backdrop");
            const modalContent = document.getElementById("modal-content");
            
            modalBackdrop.classList.remove("opacity-100");
            modalContent.classList.remove("scale-100");
            
            setTimeout(() => {
                modalBackdrop.classList.add("hidden");
                // Clear chart on close to prevent weird resizing artifacts
                d3.select("#modal-chart-container").select("svg").remove();
            }, 300); // Must match transition duration
        }

        /**
         * Sets up the IntersectionObserver to trigger animations.
         */
        function setupObserver() {
            const options = {
                root: null,
                rootMargin: "0px",
                threshold: 0.1
            };

            intersectionObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("is-visible");

                        // Trigger count-up animation
                        if (entry.target.classList.contains("kpi-value") && entry.target.dataset.target) {
                            animateCounter(entry.target);
                        }
                        
                        observer.unobserve(entry.target);
                    }
                });
            }, options);
        }
        
        /**
         * Tells the observer to watch .fade-in elements in the currently active section.
         */
        function observeVisibleFadeIns() {
             const activeSection = document.querySelector("main section.active");
             if (activeSection) {
                 activeSection.querySelectorAll(".fade-in").forEach(el => {
                     intersectionObserver.observe(el);
                 });
             }
        }

        /**
         * Animates a number from 0 to its target value.
         * @param {HTMLElement} el - The element containing the number.
         */
        function animateCounter(el) {
            const target = +el.dataset.target;
            if (isNaN(target)) return;
            
            let current = 0;
            const duration = 1500; // 1.5 seconds
            const increment = target / (duration / 16); // ~60fps
            
            const step = (timestamp) => {
                current += increment;
                if (current < target) {
                    el.textContent = Math.ceil(current).toLocaleString();
                    requestAnimationFrame(step);
                } else {
                    el.textContent = target.toLocaleString();
                }
            };
            requestAnimationFrame(step);
        }

        // --- Data Population Functions ---

        function populateDashboard(data) {
            // Set main title from data
            const projectTitle = data.overview?.projectDetails?.find(d => d.label === "Title")?.value;
            if (projectTitle) {
                document.getElementById("main-title").textContent = projectTitle;
                document.title = `${projectTitle} Dashboard`;
            }

            // Populate all sections
            if (data.overview) populateOverview(data.overview);
            if (data.team) populateTeam(data.team);
            if (data.goals) populateGoals(data.goals);
            if (data.metrics) populateMetrics(data.metrics);
            if (data.impact) populateImpactDashboard(data.impact);
            if (data.testimonials) populateTestimonials(data.testimonials);
            
            // Define chart drawing functions to be called on tab switch
            if (data.metrics?.mainChartData) {
                activeChartDrawers["dashboard"] = () => drawBarChart(
                    data.metrics.mainChartData, 
                    "#bar-chart-container", 
                    "Main Project Metrics"
                );
                // Draw the chart for the default active tab
                activeChartDrawers["dashboard"]();
            }
        }

        function populateOverview(data) {
            // Project Details Table
            const tableBody = document.getElementById("project-details-table").querySelector("tbody");
            if (data.projectDetails) {
                tableBody.innerHTML = data.projectDetails.map(item => `
                    <tr>
                        <td class="px-4 py-3 w-1/3 text-sm font-medium text-slate-500 bg-slate-50">${item.label}</td>
                        <td class="px-4 py-3 text-sm text-slate-700">${item.value}</td>
                    </tr>
                `).join("");
            } else {
                tableBody.innerHTML = `<tr><td class="p-3 text-sm text-slate-500">No project details available.</td></tr>`;
            }

            // Executive Summary
            const summaryContainer = document.getElementById("exec-summary-content");
            if (data.executiveSummary) {
                summaryContainer.innerHTML = data.executiveSummary.map(p => `<p>${p}</p>`).join("");
            } else {
                summaryContainer.innerHTML = `<p>No executive summary available.</p>`;
            }
        }

        function populateTeam(data) {
            const grid = document.getElementById("team-grid");
            if (data.leadership && data.leadership.length > 0) {
                grid.innerHTML = data.leadership.map((member, i) => `
                    <div class="fade-in fade-in-delay-${i % 3} bg-slate-50 p-4 rounded-lg border border-slate-200">
                        <h4 class="font-semibold text-lg text-blue-700">${member.name}</h4>
                        <p class="font-medium text-slate-600 text-sm mb-2">${member.title}</p>
                        <p class="text-slate-500 text-sm">${member.bio}</p>
                    </div>
                `).join("");
            } else {
                grid.innerHTML = `<p class="text-slate-500">No team members listed.</p>`;
            }
        }

        function populateGoals(data) {
            const list = document.getElementById("goals-list");
            if (data.mainGoals && data.mainGoals.length > 0) {
                list.innerHTML = data.mainGoals.map((item, i) => `
                    <div class="fade-in fade-in-delay-${i}">
                        <h4 class="font-semibold text-lg text-slate-800">${item.goal}</h4>
                        <ul class="list-disc list-inside mt-2 pl-4 space-y-1 text-slate-600">
                            ${item.objectives.map(obj => `<li>${obj}</li>`).join("")}
                        </ul>
                    </div>
                `).join("");
            } else {
                list.innerHTML = `<p class="text-slate-500">No goals listed.</p>`;
            }
        }

        function populateMetrics(data) {
            // KPI Grid
            const grid = document.getElementById("kpi-grid");
            if (data.kpis && data.kpis.length > 0) {
                grid.innerHTML = data.kpis.map((kpi, i) => `
                    <div class="kpi-card card-hover fade-in fade-in-delay-${i} bg-white p-4 rounded-xl border border-slate-200 shadow-sm cursor-pointer" 
                         data-values='${JSON.stringify(kpi.modalData || [])}'>
                        <h3 class="kpi-title text-sm font-medium text-slate-500 truncate">${kpi.title}</h3>
                        <div class="flex items-baseline space-x-2 mt-1">
                            <span class="kpi-value text-3xl font-bold text-slate-900" data-target="${kpi.value}">0</span>
                            <span class="text-sm font-medium ${kpi.growth.startsWith('+') ? 'text-green-600' : 'text-red-600'}">
                                ${kpi.growth}
                            </span>
                        </div>
                        <p class="kpi-desc text-xs text-slate-400 mt-1">${kpi.description}</p>
                    </div>
                `).join("");
            } else {
                grid.innerHTML = `<p class="text-slate-500 md:col-span-2 lg:col-span-4">No KPI data available.</p>`;
            }
            
            // Accomplishments
            const accomplishmentsContainer = document.getElementById("accomplishments-content");
            if (data.accomplishments) {
                accomplishmentsContainer.innerHTML = data.accomplishments.map(p => `<p>${p}</p>`).join("");
            } else {
                accomplishmentsContainer.innerHTML = `<p>No accomplishments available.</p>`;
            }
        }
        
        function populateTestimonials(data) {
            const container = document.getElementById("testimonials-content");
            if (data.quotes && data.quotes.length > 0) {
                container.innerHTML = data.quotes.map((item, i) => `
                    <blockquote class="fade-in fade-in-delay-${i} p-4 bg-slate-50 border-l-4 border-blue-500 rounded-r-lg">
                        <p class="italic text-slate-700">"${item.quote}"</p>
                        <footer class="mt-2 text-sm font-medium text-slate-600">- ${item.author}, <span class="text-slate-500">${item.title}</span></footer>
                    </blockquote>
                `).join("");
            } else {
                container.innerHTML = `<p class="text-slate-500">No testimonials available.</p>`;
            }
        }


        // --- D3.js Charting Functions ---

        /**
         * Generic function to draw a bar chart in a container.
         * @param {Array} data - Array of objects (e.g., [{category: "A", value: 10}])
         * @param {string} containerSelector - The CSS selector for the container div.
         * @param {string} chartTitle - Title for the chart.
         */
        function drawBarChart(data, containerSelector, chartTitle) {
            const container = d3.select(containerSelector);
            if (container.empty()) {
                console.error("Chart container not found:", containerSelector);
                return;
            }
            
            // Clear previous SVG
            container.select("svg").remove();

            // Get container dimensions
            const bounds = container.node().getBoundingClientRect();
            const margin = { top: 40, right: 20, bottom: 50, left: 60 };
            const width = bounds.width - margin.left - margin.right;
            const height = 300 - margin.top - margin.bottom; // Fixed height for consistency

            const svg = container.append("svg")
                .attr("width", width + margin.left + margin.right)
                .attr("height", height + margin.top + margin.bottom)
                .append("g")
                .attr("transform", `translate(${margin.left},${margin.top})`);

            // Scales
            const x = d3.scaleBand()
                .domain(data.map(d => d.category))
                .range([0, width])
                .padding(0.2);

            const y = d3.scaleLinear()
                .domain([0, d3.max(data, d => d.value) * 1.1 || 10]) // Add 10% padding
                .range([height, 0]);

            // Axes
            svg.append("g")
                .attr("transform", `translate(0,${height})`)
                .call(d3.axisBottom(x))
                .selectAll("text")
                .attr("transform", "translate(-10,0)rotate(-45)")
                .style("text-anchor", "end");

            svg.append("g")
                .call(d3.axisLeft(y));

            // Chart Title
            svg.append("text")
                .attr("x", width / 2)
                .attr("y", 0 - (margin.top / 2))
                .attr("text-anchor", "middle")
                .style("font-size", "14px")
                .style("font-weight", "600")
                .style("fill", "#334155") /* slate-700 */
                .text(chartTitle);

            // Bars
            svg.selectAll(".bar")
                .data(data)
                .join("rect")
                .attr("class", "bar")
                .attr("x", d => x(d.category))
                .attr("y", d => y(d.value))
                .attr("width", x.bandwidth())
                .attr("height", d => height - y(d.value))
                .attr("fill", "#3b82f6") /* blue-500 */
                .on("mouseover", (event, d) => {
                    tooltip.transition().duration(200).style("opacity", .9);
                    tooltip.html(`<strong>${d.category}</strong><br/>Value: ${d.value.toLocaleString()}`)
                        .style("left", (event.pageX + 10) + "px")
                        .style("top", (event.pageY - 28) + "px");
                })
                .on("mousemove", (event) => {
                     tooltip.style("left", (event.pageX + 10) + "px")
                            .style("top", (event.pageY - 28) + "px");
                })
                .on("mouseleave", () => {
                    tooltip.transition().duration(500).style("opacity", 0);
                });
        }
        
        /**
         * Draws a bar chart specifically for the modal.
         */
        function createModalBarChart(data, containerSelector, chartTitle) {
            // This is similar to drawBarChart but might have different margins or styling
            // For this demo, we'll reuse the same logic but with different colors
            const container = d3.select(containerSelector);
            if (container.empty()) return;
            
            container.select("svg").remove();

            const bounds = container.node().getBoundingClientRect();
            const margin = { top: 30, right: 20, bottom: 40, left: 50 };
            const width = bounds.width - margin.left - margin.right;
            const height = 250 - margin.top - margin.bottom;

            const svg = container.append("svg")
                .attr("width", width + margin.left + margin.right)
                .attr("height", height + margin.top + margin.bottom)
                .append("g")
                .attr("transform", `translate(${margin.left},${margin.top})`);

            const x = d3.scaleBand()
                .domain(data.map(d => d.label))
                .range([0, width])
                .padding(0.2);

            const y = d3.scaleLinear()
                .domain([0, d3.max(data, d => d.value) * 1.1 || 10])
                .range([height, 0]);

            svg.append("g")
                .attr("transform", `translate(0,${height})`)
                .call(d3.axisBottom(x));

            svg.append("g")
                .call(d3.axisLeft(y).ticks(5));

            svg.selectAll(".bar")
                .data(data)
                .join("rect")
                .attr("class", "bar")
                .attr("x", d => x(d.label))
                .attr("y", d => y(d.value))
                .attr("width", x.bandwidth())
                .attr("height", d => height - y(d.value))
                .attr("fill", "#10b981") /* emerald-500 */
                .on("mouseover", (event, d) => {
                    tooltip.transition().duration(200).style("opacity", .9);
                    tooltip.html(`<strong>${d.label}</strong><br/>Value: ${d.value.toLocaleString()}`)
                        .style("left", (event.pageX + 10) + "px")
                        .style("top", (event.pageY - 28) + "px");
                })
                .on("mousemove", (event) => {
                     tooltip.style("left", (event.pageX + 10) + "px")
                            .style("top", (event.pageY - 28) + "px");
                })
                .on("mouseleave", () => {
                    tooltip.transition().duration(500).style("opacity", 0);
                });
        }

